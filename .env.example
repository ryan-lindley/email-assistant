# Email Assistant Configuration
# Copy this file to .env and fill in your values

# Gmail API Configuration
GMAIL_CREDENTIALS_PATH=/home/user/.config/email-assistant/gmail_credentials.json
GMAIL_USER_EMAIL=your-email@gmail.com

# ML Model Configuration
ML_CONFIDENCE_THRESHOLD_LOW=0.3
ML_CONFIDENCE_THRESHOLD_HIGH=0.7
ML_MODEL_PATH=/home/user/.local/share/email-assistant/models
ML_RETRAIN_THRESHOLD=50

# Database Configuration
DATABASE_PATH=/home/user/.local/share/email-assistant/email_data.db
DATABASE_ENCRYPTION_KEY_NAME=email-assistant-db-key

# Calendar Configuration
CALENDAR_REMINDER_INTERVALS=168,48,24,3  # hours: 1 week, 2 days, 1 day, 3 hours
CALENDAR_DEFAULT_SNOOZE_HOURS=4
CALENDAR_SYNC_ENABLED=false  # Require approval initially
CALENDAR_TIMEZONE=America/New_York

# Notification Configuration
ENABLE_DESKTOP_NOTIFICATIONS=true
ENABLE_EMAIL_REMINDERS=true
REMINDER_EMAIL_ADDRESS=your-email@gmail.com

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/home/user/.local/share/email-assistant/email_assistant.log
LOG_SENSITIVE_DATA=false

# Application Paths
APP_DATA_DIR=/home/user/.local/share/email-assistant
APP_CONFIG_DIR=/home/user/.config/email-assistant
